<div class='container'>
	
	<!-- tournament -->	
	<section>
		<h1 id="tournamentName" contenteditable="">Scoreboard</h1>
		<p>Track tournament scores. </p>
	<section>
	
	<!-- tournament details -->	
	<section>
		<br/ >
		<br />
		<div class="stages">
			<div id="stage1" class="stage">
				<div class="1v1">
					<p><%= "Tournament name : #{@tournament.name}"%></p>
					<p><%= "Tournament  : #{@tournament.email}"%></p>
					<p><%= "Tournament description : #{@tournament.desc}"%></p>
				</div>
			</div>
		</div>
	</section>
	
	<!-- tournament Score updates -->
	<section>
		<%= form_tag("/scoreupdate/#{params[:id]}", method: :post, :class => "game") do %>
		    <%= label_tag 'p1', 'player 1', :class => "input-field input-name" %>
			<%= text_field_tag 'p1' %>
			
			<%= label_tag 's1', 'score 1', :class => "input-field input-score" %>
			<%= text_field_tag 's1', :type => "number", :class => "input-score" %>

			<br />
			
		    <%= label_tag 'p2', 'player 2', :class => "input-field input-name" %>
			<%= text_field_tag 'p2' %>

		    <%= label_tag 's2', 'score 2' %>
			<%= text_field_tag 's2', :type => "number", :class => "input-field input-score" %>
			
			<div class="actions">
		    <%= submit_tag "Submit", :class => "add-button" %>
		  </div>
		<% end %>
		
	</section>
	
	<!-- view games played -->
	<section>
		<%= link_to 'View games', games_list_path(params[:id])%>
		
	</section>
	
	
	<!-- tournament Score results -->
	<section>
		
		<table class="table table-striped table-bordered">
			<br />
			<br />
			<thead>
				<tr>
		  			<th><%= 'Player' %></th>
		  			<th><%= 'Score' %></th>
				</tr>
			</thead>
			<tbody>
			    	<% @score_hash.each do |k, v| %>
			      		<tr>
							<td><%= k %></td>
							<td><%= v %></td>
			      		</tr>
			    	<% end %>
			</tbody>	
		</table>
	</section>
</div>